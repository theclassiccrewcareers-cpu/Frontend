{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./",
        "rootDir": "./",
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": false,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ]
    },
    "include": [
        "script.ts",
        "globals.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}